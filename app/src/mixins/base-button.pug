
mixin baseButton(text, href=null ,extraClasses="")
    

    if (href)
        
        a.bg-amber-500.text-amber-900.font-medium(
            href=href
            class=`
            border-2 border-solid border-transparent 
            shadow-sm shadow-amber-700 
            transition-colors duration-150 ease-in inline-block ${extraClasses}`
            w:hover="bg-amber-300 text-amber-500"
            )
            
            .py-3.px-9
            
                .uppercase #{text}

    else
        
        button.bg-amber-500.text-amber-900.font-medium(
            class=`
            border-2 border-solid border-transparent shadow-sm shadow-amber-700 
            transition-colors duration-150 ease-in 
            ${extraClasses}`
            w:hover="bg-amber-300 text-amber-500"
            ) 
            .py-3.px-9
                .uppercase #{text}